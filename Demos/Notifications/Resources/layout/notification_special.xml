<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:paddingStart="16dp"
    android:paddingEnd="8dp">
    <ImageView
        android:id="@+id/notification_special_image"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/notification_special_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/notification_special_image"
        android:layout_toLeftOf="@id/notification_special_image"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        style="@android:style/TextAppearance.Material.Notification.Title" />

    <TextView
        android:id="@+id/notification_special_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_special_title"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/notification_special_image"
        android:layout_toLeftOf="@id/notification_special_image"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:ellipsize="end"
        android:maxLines="3"
        style="@android:style/TextAppearance.Material.Notification" />
</RelativeLayout>